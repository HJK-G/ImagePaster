{
    "name": "Image Paster",
    "description": "Uploads any image you paste to Imgur, so that you can use the url easier.",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
        "default_title": "Paste an image, or click me to get a url of the image you pasted",
        "default_popup": "popup.html",
        "default_icon": {
          "16": "/images/get_started16.png",
          "32": "/images/get_started32.png",
          "48": "/images/get_started48.png",
          "128": "/images/get_started128.png"
        }
    },
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+V",
          "mac": "Command+V"
        },
        "description": "Opens popup when image is attempted to be pasted"
      }
    },
    "icons": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    }
}